<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bo.ucb.edu.ingsoft.dao.PhotoDao">
    <select id="findByIdGame" resultType="bo.ucb.edu.ingsoft.models.Photo">
        SELECT
               id_photos as idPhoto,
               photo_path as photoPath
        FROM photos
        WHERE
            id_game in (#{idGame}) and type = 1
    </select>
    <select id="find" resultType="bo.ucb.edu.ingsoft.models.Photo">
        SELECT *
            id_photos as idPhoto,
            id_game as idGame,
            photo_path as photoPath,
            type as type
        FROM photos
        WHERE id_game in
        <foreach collection="list" item="item" index="index"
            open="(" separator="," close = ")">
         #{item}
        </foreach>
        and type = 1;
    </select>
</mapper>

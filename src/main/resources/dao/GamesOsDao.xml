<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bo.ucb.edu.ingsoft.dao.GamesOsDao">
    <insert id="createGameOs" parameterType="bo.ucb.edu.ingsoft.models.GameOS">
      INSERT INTO games_os (id_games_os,id_game,id_operating_system)
        VALUES (
             null,
             #{idGame},
             #{idOperatingSystem}
        )
    </insert>
    <select id="findByIdGameOs" resultType="bo.ucb.edu.ingsoft.models.OperatingSystem">
        SELECT
               id_operating_system as idOperatingSystem,
               operating_system as operatingSystem,
               logo_path as logoPath
        FROM operating_system
        WHERE
              status = 1
        AND id_operating_system in
        <foreach collection="list" item="item" index="index"
                 open="(" separator="," close = ")">
            #{item}
        </foreach>
    </select>
    <select id="findByGame" resultType="java.lang.Integer">
        SELECT id_operating_system
        FROM games_os
        WHERE id_game = #{gameId}
        AND status = 1
    </select>

    <select id="findByIdGamesOs" resultType="java.lang.Integer">
        SELECT
            id_games_os as idGameOs
        FROM games_os
        WHERE
            id_game=#{idGame}
    </select>
    <delete id="deleteOldsOs">
        DELETE
        FROM games_os
        WHERE
        id_games_os in
        <foreach collection="list" item="item" index="index"
                 open="(" separator="," close = ")">
            #{item}
        </foreach>
    </delete>
</mapper>
